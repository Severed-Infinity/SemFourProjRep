<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.davidswift.project.controller.RoomInterfaceController">
    <AnchorPane>
        <children>
            <TableView fx:id="roomTableView" layoutX="-1.0" layoutY="-2.0" prefHeight="398.0"
                       prefWidth="454.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <columns>
                    <TableColumn fx:id="roomNumberField" prefWidth="90.0" text="Room Number"/>
                    <TableColumn fx:id="roomSeatingField" prefWidth="90.0" text="Seating"/>
                    <TableColumn fx:id="roomDepartmentField" prefWidth="90.0" text="Department"/>
                    <TableColumn fx:id="isLabField" prefWidth="90.0" text="Lab"/>

                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </children>
    </AnchorPane>
    <AnchorPane layoutX="451.0" layoutY="1.0" AnchorPane.bottomAnchor="-1.0"
                AnchorPane.leftAnchor="451.0" AnchorPane.rightAnchor="-451.0"
                AnchorPane.topAnchor="1.0">
        <children>
            <VBox spacing="3.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <children>
                    <Label text="Room Number"/>
                    <TextField fx:id="newRoomNumber"/>
                    <Label text="Seating"/>
                    <TextField fx:id="newRoomSeating"/>
                    <Label text="Department"/>
                    <TextField fx:id="newDepartment"/>
                    <Label text="Lab"/>
                    <TextField fx:id="newRoomIsLab"/>
                </children>

            </VBox>
        </children>
    </AnchorPane>
    <HBox alignment="CENTER" layoutX="469.0" layoutY="311.0" spacing="10.0">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <children>
            <Button fx:id="newRoom" alignment="TOP_CENTER" mnemonicParsing="false"
                    onAction="#addNewRoom" text="Add"/>
            <Button fx:id="updateRoom" mnemonicParsing="false" onAction="#updateRoom" text="Update
           "/>
            <Button fx:id="deleteRoom" mnemonicParsing="false" onAction="#removeRoom" text="Delete
           "/>
        </children>
    </HBox>
    <HBox layoutX="469.0" layoutY="341.0">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <children>
            <Button fx:id="clearFields" mnemonicParsing="false" onAction="#clearFields"
                    text="Clear"/>
        </children>
    </HBox>
</AnchorPane>
