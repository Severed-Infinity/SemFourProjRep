<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane stylesheets="@/assets/project/styles/base.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.davidswift.project.controller.MainInterfaceController">

    <TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
             prefHeight="400.0" prefWidth="650.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="User">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <fx:include source="UserInterface.fxml"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Course">
            <content>
                <AnchorPane>
                    <children>
                        <fx:include source="CourseInterface.fxml"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Module">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <fx:include source="ModuleInterface.fxml"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Room">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <fx:include source="RoomInterface.fxml"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Class">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <fx:include source="ClassInterface.fxml"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </TabPane>
    <Button fx:id="logout" layoutX="580.0" layoutY="2.0" mnemonicParsing="false"
            onAction="#handleLogoutButtonAction" text="Logout"/>
</AnchorPane>
